<launch>
  <!-- Arguments -->
  <arg name="move_forward_only" default="false"/>
  <arg name="rviz" default="false"/>
  <arg name="map_file" default="$(env LOCALIZATION_MAP_PATH)"/>
  <arg name="plannning_map_file" default="$(env PLANNING_MAP_PATH)"/>

  <!-- Map server for localization -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
    <!-- Topic Name -->
    <remap from="map" to="/map" />
    <remap from="map_metadata" to="/map_metadata" />
    <!-- Frame Name -->
    <param name="frame_id" value="map" />
  </node>
  <!-- Map server for planning-->
  <node pkg="map_server" name="planning_map_server" type="map_server" args="$(arg plannning_map_file)">
    <!-- Topic Name -->
    <remap from="map" to="/planning/map" />
    <remap from="map_metadata" to="/planning/map_metadata" />
    <!-- Frame Name -->
    <param name="frame_id" value="map" />
  </node>

  <!-- AMCL -->
  <include file="$(find horiokart2021_navigation)/launch/amcl.launch">
    <arg name="scan_topic" value="scan_filtered/scan_top_lrf" />
  </include>

  <!-- move_base -->
  <include file="$(find horiokart2021_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="cmd_vel_topic" value="/cmd_vel"/>
    <arg name="map_topic" value="/planning/map"/>
    <arg name="map_metadata_topic" value="/planning/map_metadata"/>
  </include>

  <!-- rviz -->
  <group if="$(arg rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find horiokart2021_navigation)/rviz/navigation.rviz"/>
  </group>
</launch>
