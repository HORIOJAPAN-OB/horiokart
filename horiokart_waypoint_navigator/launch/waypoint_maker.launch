<launch> 
  <arg name="map_file" default="$(env MAP_PATH)"/>
  <arg name="waypoint_save_path" default="$(env HOME)/ros_data/"/>

  <!-- map -->
  <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)" output="screen">
    <!-- Topic Name -->
    <remap from="map" to="/map" />
    <remap from="map_metadata" to="/map_metadata" />
    <!-- Frame Name -->
    <param name="frame_id" value="map" />
  </node>

  <node name="horiokart_waypoint_maker" pkg="horiokart_waypoint_navigator" type="waypoint_maker.py" output="screen">
    <param name="save_path" value="$(arg waypoint_save_path)" />
  </node>

  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find horiokart_waypoint_navigator)/rviz/maker.rviz"/>
</launch>