<?xml version="1.0" encoding="utf-8"?>

<robot name="horiokart2021_robot">
  <!-- =============== Link & Joint =============== -->
  <!-- Base -->
  <link name="base_footprint"/>

  <joint name="base_link_joint" type="fixed">
    <origin xyz="0 0 0.20316" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <box size="0.5 0.4 0.3"/>
      </geometry>
    </visual>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <origin rpy="-1.5708 0 0" xyz="0 -0.214375 0"/>
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
  </joint>
  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.15"/>
      </geometry>
    </visual>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <origin rpy="-1.5708 0 0" xyz="0 0.214375 0"/>
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
  </joint>
  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.15"/>
      </geometry>
    </visual>
  </link>

  <joint name="front_lrf_link_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_lrf_link"/>
    <origin xyz="0.31 0 0.15" rpy="0 0 3.14"/>
  </joint>
  <link name="front_lrf_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint name="top_lrf_link_joint" type="fixed">
    <parent link="base_link"/>
    <child link="top_lrf_link"/>
    <origin xyz="0.31 0 0.65" rpy="0 0 3.14"/>
  </joint>
  <link name="top_lrf_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </visual>
  </link>

</robot>
